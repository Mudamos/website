		<div class="custom-container">
			<header class="header clearfix">
        <%= image_tag "static/logo.png", class: "logo" %>

				<nav class="links	visible-md">
					<a class="link def-text-color" href="#">Assine um Projeto</a>
					<a class="link def-text-color current underscore" href="#">Quem somos</a>
				</nav>
			</header>

      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" %>
  <%#= javascript_include_tag "static" %>
